<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mainpagebackground"
    tools:context=".QuestionType">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView1"
           app:cardElevation="16dp"
           android:backgroundTint="@color/white"
           android:layout_margin="8dp"
           app:cardCornerRadius="16dp"
           android:layout_width="match_parent"
           android:layout_height="145dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/biology_image"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Biology"
                   android:textSize="32dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView2"
           app:cardElevation="16dp"
           android:backgroundTint="@color/white"
           android:layout_margin="8dp"
           app:cardCornerRadius="16dp"
           android:layout_width="match_parent"
           android:layout_height="145dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/chemistry_image"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Chemistry"
                   android:textSize="32dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView3"
           app:cardElevation="16dp"
           android:backgroundTint="@color/white"
           android:layout_margin="8dp"
           app:cardCornerRadius="16dp"
           android:layout_width="match_parent"
           android:layout_height="145dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="145dp"
                   android:src="@drawable/physics"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Physics"
                   android:textSize="32dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView4"
           app:cardElevation="16dp"
           android:backgroundTint="@color/white"
           android:layout_margin="8dp"
           app:cardCornerRadius="16dp"
           android:layout_width="match_parent"
           android:layout_height="145dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="145dp"
                   android:src="@drawable/maths_image"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Maths"
                   android:textSize="32dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView5"
           app:cardElevation="16dp"
           android:backgroundTint="@color/white"
           android:layout_margin="8dp"
           app:cardCornerRadius="16dp"
           android:layout_width="match_parent"
           android:layout_height="145dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="145dp"
                   android:src="@drawable/english_image"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="English"
                   android:textSize="32dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/cardView6"
           app:cardElevation="16dp"
           android:backgroundTint="@color/white"
           android:layout_margin="8dp"
           app:cardCornerRadius="16dp"
           android:layout_width="match_parent"
           android:layout_height="145dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="145dp"
                   android:src="@drawable/gk_image"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="General Knowledge"
                   android:textSize="32dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>


</ScrollView>